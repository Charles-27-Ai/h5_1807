<!-- 引入模板 -->
<import src="/template/index.wxml" />

<!--index.wxml-->
<view>
  <swiper indicator-dots="{{true}}" autoplay="{{true}}">
    <navigator wx:for="{{recommend}}" wx:key="song_id" url="/pages/player/player?id={{item.song_id}}">
      <swiper-item>
        <image src="{{item.pic_s500}}" class="slide-image" />
      </swiper-item>
    </navigator>
  </swiper>
  <view class="weui-search-bar">
    <view class="weui-search-bar__form">
      <view class="weui-search-bar__box">
        <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
        <input type="text" class="weui-search-bar__input" placeholder="搜索" value="{{inputVal}}" bindtap="gotoSearch"/>
      </view>
    </view>
  </view>
</view>